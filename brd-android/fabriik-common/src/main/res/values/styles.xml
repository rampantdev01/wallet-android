<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FabriikTheme.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/FabriikTheme.Dialog.Alert.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/FabriikTheme.Dialog.Alert.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/FabriikTheme.Dialog.Alert.PositiveButton</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/fabriik_black</item>
        <item name="android:textAppearance">@style/FabriikTheme.Dialog.Alert.Title.Appearance</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.Title.Appearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/mobile_font_medium</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#8A000000</item>
        <item name="android:textAppearance">@style/FabriikTheme.Dialog.Alert.Body.Appearance</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.Body.Appearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/mobile_font</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fabriik_blue_700</item>
    </style>

    <style name="FabriikGenericDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.MinWidth">
        <item name="dialogCornerRadius">16dp</item>
        <item name="dialogPreferredPadding">24dp</item>
    </style>

    <style name="FabriikButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/light_contrast_02</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>
        <item name="rippleColor">@color/light_interaction_primary_pressed</item>
        <item name="backgroundTint">@color/bg_button_tint</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="FabriikButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/light_link_01</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>
        <item name="strokeColor">@color/light_primary</item>
        <item name="rippleColor">@color/light_tertiary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="FabriikButtonStyle.Icon">
        <item name="iconTint">@color/light_contrast_02</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="FabriikButtonStyle.Dense">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAppearance">@style/TextStyle.Subtitle2</item>
    </style>

    <style name="FabriikTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/light_link_01</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>
    </style>

    <style name="FabriikBottomSheetTextButtonStyle" parent="FabriikTextButtonStyle">
        <item name="android:gravity">start</item>
        <item name="paddingEnd">16dp</item>
        <item name="paddingStart">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FabriikRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/FabriikRadioButton.ThemeOverlay</item>
        <item name="android:textColor">@color/light_text_01</item>
        <item name="android:textAppearance">@style/TextStyle.Caption</item>
    </style>

    <style name="FabriikRadioButton.ThemeOverlay" parent="">
        <item name="colorOnSurface">@color/light_icons_01</item>
        <item name="colorSecondary">@color/light_interaction_primary_focused</item>
    </style>

    <style name="FabriikCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">@dimen/radius_l</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">36dp</item>
        <item name="rippleColor">@color/fabriik_ripple_color</item>
    </style>

    <style name="FabriikSnackBarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="FabriikLoadingIndicatorStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/light_primary</item>
    </style>

    <style name="FabriikLoadingIndicatorStyle.White">
        <item name="indicatorColor">@color/white</item>
    </style>

    <style name="FabriikTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:foreground">@drawable/bg_input_view</item>
        <item name="android:textColorHint">@color/til_hint_expanded_tint</item>
        <item name="hintTextColor">@color/til_hint_collapsed_tint</item>
        <item name="hintTextAppearance">@style/TextStyle.Caption</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCollapsedPaddingTop">6dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="materialThemeOverlay">@style/FabriikTextInputStyle.ThemeOverlay</item>
    </style>

    <style name="FabriikTextInputStyle.Chevron">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_chevron_down</item>
    </style>

    <style name="FabriikTextInputStyle.ThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/FabriikEditTextStyle</item>
    </style>

    <style name="FabriikEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">@style/TextStyle.Body2</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="FabriikEditTextStyle.NoFloatingLabel">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColorHint">@color/light_text_01</item>
        <item name="android:textAppearance">@style/TextStyle.Body2</item>
    </style>

    <style name="FabriikEditTextStyle.Clickable">
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="FabriikToastTextAppearance" parent="TextStyle.Body2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FabriikSearchEditTextStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/search_border</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/ic_search_gray_18dp</item>
        <item name="android:textColor">@color/light_text_01</item>
        <item name="android:textColorHint">@color/light_text_01</item>
        <item name="android:textAppearance">@style/TextStyle.Body2</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxEms">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ConfirmButton" parent="@style/FabriikButtonStyle.Dense">
        <item name="height">48dp</item>
        <item name="color">@color/light_primary</item>
        <item name="android:textAppearance">@style/TextStyle.Subtitle1</item>
    </style>

    <style name="FabriikCustomSwitchItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_color_fabriik_switch</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>
        <item name="android:background">@drawable/bg_switch_item</item>
    </style>

    <style name="FabriikCustomCheckboxSytle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_text_02</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FabriikBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FabriikBottomSheetDialogStyle</item>
    </style>

    <style name="FabriikBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>